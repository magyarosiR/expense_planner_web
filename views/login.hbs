<html>
  <head>
    <link rel="stylesheet" href="styleforbeforelog.css" />
    <script src="functions.js" type="text/javascript"></script>
    <script src="app.js" type="scripts/app"></script>
    <title>Log in</title>
  </head>

  <body>
    <div class="flex-container">
      <div class="welcome">Log in please to your account</div>
      <div class="login-container">
        <p>Enter your details:</p>
        <form class="login-form">
          <input type="email" placeholder="E-mail" id="email-lo" required />
          <input
            type="password"
            placeholder="Password"
            id="passw-lo"
            required
          />
          <button type="submit" id="submit-lo" onclick="login()">Log In</button>
        </form>
        <div class="pls-signup">
          <p style="display: inline-block">
            If you don't have an account please
          </p>

          <p style="display: inline-block">
            <a class="signup-btn" href="signup"> Sign Up</a>
          </p>
        </div>
      </div>
    </div>
  </body>
  <div class="last-element">
    Thank you for your
    <p style="color: #ff3c38; margin-left: 3px">trust</p>
    .
  </div>
</html>